extends layout.pug
block appContent
	p Text Children
block auth
	div(class="auth")
		div(class="auth__content")
			p Выполните регистрацию
			form(action="/" method="POST")
				div(class="form-group")
					label(for="log")
						| Введите имя
						br
						input(type="text" name="login" value="Ваше имя" id="log" class="form-control")
				div(class="form-group")
					label(for="pas")
						| Введите пароль
						br
						input(type="password" name="pass" value="Ваш пароль" id="pas" class="form-control")
				div(class="form-group")
					input(type="submit" name="sub" value="Отправить" class="btn btn-primary")
					div(class="forgottenPass")
						label(for="forgotten")
							| Забыли пароль&nbsp;
							input(type="checkbox" name="forgottenPass" value="Ваш пароль" id="forgotten")