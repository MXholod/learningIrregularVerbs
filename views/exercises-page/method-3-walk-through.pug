extends ../layout.pug
block variables
	- mainPage = false;
	- profilePage = false;
	- listVerbs = false;
	- methods = false;
block appContent
	div(class="wrapper__method3")
		div(class="wrapper__method3__info-panel")
			div
				div Information 11-20
				div Counter 5:00
		div(class="wrapper__method3__main")
			each val, index in dropableRows
				div(class="wrapper__method3__main__task")
					div(class="task__row1")
						div(class="task__unique") #{val.id}
						div(class="task__hidden") #{val.index}
					div(class="task__row2")
						div(class="task__translate") #{val.translatedWord}
						if val.engArray[0] === ""
							input(type="text" class="task__e1 task__empty-field" value=val.engArray[0])
						else
							div(class="task__e1") #{val.engArray[0]}
						if val.engArray[1] === ""
							input(type="text" class="task__e1 task__empty-field" value=val.engArray[1])
						else
							div(class="task__e2") #{val.engArray[1]}
						if val.engArray[2] === ""
							input(type="text" class="task__e1 task__empty-field" value=val.engArray[2])
						else
							div(class="task__e3") #{val.engArray[2]}
		div(class="wrapper__method3__single-words")
			a(href="/method3?currentPageAmount="+currentNum class="btn btn-primary") Go to 2
		p #{lastLength}