extends ../layout.pug
block variables
	- mainPage = false;
	- profilePage = false;
	- listVerbs = false;
	- methods = true;
	- method1 = false;
	- method2 = false;
	- method3 = true;
block appContent
	div(class="wrapper__method3")
		div(class="wrapper__method3__info-panel")
			div
				div Information 1-10
				div Counter 5:00
		div(class="main-window")
			div(class="numbers")
				div(class="numbers__n-1 numbers__nums-pos")
					<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xml:space="preserve" width="200" height="300" viewbox="0 0 200 300">
						<text x="20" y="250" stroke="#fff" stroke-width="5" font-size="300" fill="#fad6f4" font-family="Helvetica">1</text>
					</svg>
				div(class="numbers__n-2 numbers__nums-pos")
					<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xml:space="preserve" width="200" height="300" viewbox="0 0 200 300">
						<text x="20" y="250" stroke="#fff" stroke-width="5" font-size="300" fill="#fad6f4" font-family="Helvetica">2</text>
					</svg>
				div(class="numbers__n-3 numbers__nums-pos")
					<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xml:space="preserve" width="200" height="300" viewbox="0 0 200 300">
						<text x="20" y="250" stroke="#fff" stroke-width="5" font-size="300" fill="#fad6f4" font-family="Helvetica">3</text>
					</svg>
		div(class="wrapper__method3__main")
			each val, index in dropableRows
				div(class="wrapper__method3__main__task")
					div(class="task__row0")
						div(class="task__translate") #{val.translatedWord}
					div(class="task__row1")
						div(class="task__unique") #{val.id}
						div(class="task__hidden") #{val.index}
						div(class="task__result") 0
						div(class="task__word") #{singleWords[index].word}
					div(class="task__row2")
						if val.engArray[0] === ""
							input(type="text" class="task__e1 task__empty-field" value=val.engArray[0])
						else
							div(class="task__e1") #{val.engArray[0]}
						if val.engArray[1] === ""
							input(type="text" class="task__e1 task__empty-field" value=val.engArray[1])
						else
							div(class="task__e2") #{val.engArray[1]}
						if val.engArray[2] === ""
							input(type="text" class="task__e1 task__empty-field" value=val.engArray[2])
						else
							div(class="task__e3") #{val.engArray[2]}
		div(class="wrapper__method3__move-on")
			a(href="/method3?currentPageAmount="+currentNum class="move-on__link")